<!--pages/playVideo/playVideo.wxml-->
<view class="play__page">
  <video 
      id="myVideo"
      class="play__video"
      autoplay
      poster="{{ posterUrl }}"
      src="https://qiniu-app.qtshe.com/seven__mp4.mp4"
      bindtimeupdate="bindtimeupdate"
      bindended="handleEnd"
      controls="{{ false }}"
    ></video>
    <view class="skip__box">
      <image hidden="{{ showStatus !== 1 }}" bindtap="skipStatus" class="skip__btn shaking" mode="heightFix" src="https://qiniu-app.qtshe.com/skipIt.png"></image>
      <image hidden="{{ showStatus !== 2 }}" bindtap="skipPage" class="skip__btn shaking" mode="heightFix" src="https://qiniu-app.qtshe.com/skip__to.png"></image>
    </view>
    <view hidden="{{ showStatus !== 3 }}" class="marsk__box"></view>
    <image hidden="{{ showStatus !== 3 }}" bindtap="skipStatus" class="cant__skip" src="https://qiniu-app.qtshe.com/cantSkipTo2.gif"></image>
</view>
